syntax on
filetype plugin indent on

set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
set backspace=indent,eol,start

set showcmd
set showmatch

set ignorecase
set smartcase
set hlsearch
set incsearch

set ruler
set hidden
set background=dark

set wildmenu
set wildmode=list:longest

set nobackup

set history=1000
set viminfo+=n~/.vim_history

set directory=$HOME/.vim//

set nocompatible
